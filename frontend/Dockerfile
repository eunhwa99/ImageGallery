FROM node:20-alpine
WORKDIR /app

COPY package*.json ./
RUN npm install
COPY . .

# docker-compose.yml에서 넘어온 ARG를 ENV로 세팅
ARG REACT_APP_BACKEND_URL
ENV REACT_APP_BACKEND_URL=$REACT_APP_BACKEND_URL

# React 앱 빌드
RUN npm run build
RUN npm install -g serve

EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]
